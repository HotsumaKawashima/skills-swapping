<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/picture_upload"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@id/Logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/category_view"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20sp"
        android:text="CATEGORY"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/picture_upload" />

    <EditText
        android:id="@+id/category_edit_view"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:inputType="textFilter"
        android:text="Category"
        android:layout_marginTop="20sp"
        android:layout_marginStart="20sp"
        app:layout_constraintStart_toEndOf="@id/category_view"
        app:layout_constraintTop_toBottomOf="@id/picture_upload"/>

    <TextView
        android:id="@+id/description_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/category_edit_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="36dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:text="DESCRIPTION" />


    <EditText
        android:id="@+id/description_edit_view"
        android:layout_width="340dp"
        android:layout_height="200dp"
        android:gravity="start|top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_view"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/how_view"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/description_edit_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="36dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:text="HOW" />

    <EditText
        android:id="@+id/how_edit_view"
        android:layout_width="233dp"
        android:layout_height="40dp"
        android:inputType="textFilter"
        app:layout_constraintTop_toBottomOf="@id/description_edit_view"
        app:layout_constraintStart_toEndOf="@id/how_view"
        android:layout_marginStart="60sp"
        android:layout_marginTop="10dp"
        android:text="How"/>

    <TextView
        android:id="@+id/price_view"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/how_edit_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="36dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:text="PRICE" />

    <EditText
        android:id="@+id/price_edit_view"
        android:layout_width="233dp"
        android:layout_height="40dp"
        android:inputType="textFilter"
        app:layout_constraintTop_toBottomOf="@id/how_edit_view"
        app:layout_constraintStart_toEndOf="@id/price_view"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:text="Price" />

    <Button
        android:id="@+id/preview_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/price_edit_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:text="PREVIOUS" />




</androidx.constraintlayout.widget.ConstraintLayout>